FROM golang:1.16.4-buster AS golang-build
WORKDIR /src
ENV CGO_ENABLED=0
RUN --mount=target=. \
    --mount=type=cache,target=/root/.cache/go-build \
    go test -v ./...

RUN --mount=target=. \
    --mount=type=cache,target=/root/.cache/go-build \
    go build -o /fledge/ ./...

RUN mkdir -p /tmp/fledge-job
COPY ./deployment/fledge-job/ /tmp/fledge-job/

FROM python:3.9.7-buster AS python-build
WORKDIR /src
COPY ./lib/python /src
RUN python3 setup.py bdist_wheel && cp dist/fledge-*.whl /tmp/

FROM myungjinlee/mlpack:cpu
COPY --from=golang-build /fledge/* /usr/bin/

RUN mkdir -p /fledge/deployment
COPY --from=golang-build /tmp/fledge-job/ /fledge/deployment/
RUN rm -f /fledge/deployment/job-agent.yaml.mustache.*
COPY --from=golang-build /tmp/fledge-job/job-agent.yaml.mustache.minikube /fledge/deployment/job-agent.yaml.mustache

# Install fledge python library
COPY --from=python-build /tmp/*.whl /tmp/
RUN pip3 install /tmp/*.whl && rm -f /tmp/*.whl
